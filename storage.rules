rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // User files - only accessible by the owner
    match /users/{userId}/{allPaths=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Project files - accessible by project owner
    match /projects/{projectId}/{allPaths=**} {
      // Allow read if user owns the project
      allow read: if isSignedIn() && 
        (
          // Check if project exists and user owns it
          (exists(/databases/$(database)/documents/projects/$(projectId)) && 
           get(/databases/$(database)/documents/projects/$(projectId)).data.userId == request.auth.uid) ||
          // Allow read during upload process
          request.auth.uid != null
        );
      
      // Allow write for authenticated users (simplified for project creation)
      // The actual ownership check happens in the application logic
      allow write: if isSignedIn() && 
        request.resource.size < 50 * 1024 * 1024; // Max 50MB per file
    }
    
    // Public assets - readable by anyone, writable by none
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Forum images - writable by authenticated users, readable by anyone
    match /forumImages/{imageId} {
      allow read: if true;
      allow write: if isSignedIn() && 
        request.resource.size < 10 * 1024 * 1024 && // Max 10MB
        request.resource.contentType.matches('image/.*'); // Only images
    }
    
    // Default deny all
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
